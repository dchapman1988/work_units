%h2= "Edit Work Unit #{@work_unit.try(:id)}"
= form_for(@work_unit) do |f|
  = render :partial => 'shared/work_unit_form', :locals => {:f => f}
  .actions
    %div{:style => "float: left; width: auto;"}
      = f.submit
= button_to 'Cancel', work_unit_path(@work_unit), :method => :get
%br/
%p
  = link_to "Back to Work Units", work_units_path
